{
  "name": "ruhuna-app",
  "private": true,
  "scripts": {
    "codegen": "graphql-codegen --config ./graphql/codegen.yml",
    "next": "next",
    "dev": "ts-node --project tsconfig.server.json server.ts",
    "start": "dotenv -e .env -- node dist/server.js",
    "build:all": "npm run build:next && npm run build:server",
    "build:next": "next build",
    "build:server": "tsc --project tsconfig.server.json",
    "test": "npm run reset@test && dotenv -e .env.test -e .env -- jest --runInBand --watch",
    "test@clearCache": "dotenv -e .env.test -e .env -- jest --clearCache",
    "reset@test": "dotenv -e .env.test -- npx prisma migrate reset --force --skip-seed",
    "reset@dev": "dotenv -e .env -- npx prisma migrate reset",
    "migrate@dev": "dotenv -e .env -- npx prisma migrate dev",
    "migrate@test": "dotenv -e .env.test -- npx prisma migrate dev ",
    "migration@create-only": "dotenv -e .env -- npx prisma migrate dev --create-only"
  },
  "dependencies": {
    "@emotion/react": "^11.9.0",
    "@emotion/server": "^11.4.0",
    "@emotion/styled": "^11.8.1",
    "@graphql-tools/graphql-file-loader": "^7.3.3",
    "@graphql-tools/load-files": "^6.5.3",
    "@graphql-tools/merge": "^8.2.2",
    "@mui/icons-material": "^5.8.0",
    "@mui/material": "^5.8.0",
    "@prisma/client": "^3.4.2",
    "apollo-server": "^3.6.2",
    "apollo-server-express": "^3.6.2",
    "axios": "^0.27.2",
    "dotenv": "^10.0.0",
    "dotenv-cli": "^4.1.1",
    "express": "^4.17.1",
    "firebase": "^9.6.0",
    "firebase-admin": "^10.0.0",
    "graphql": "^16.3.0",
    "next": "^12.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.30.0",
    "socket.io": "^4.4.0",
    "socket.io-client": "^4.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.13",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-typescript": "^7.16.0",
    "@graphql-codegen/cli": "2.6.1",
    "@graphql-codegen/typescript": "2.4.3",
    "@graphql-codegen/typescript-operations": "2.3.0",
    "@graphql-codegen/typescript-react-apollo": "3.2.5",
    "@graphql-codegen/typescript-resolvers": "^2.5.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.8",
    "@types/node": "16.11.11",
    "@types/react": "17.0.37",
    "@types/supertest": "^2.0.11",
    "babel-jest": "^28.1.3",
    "eslint": "^8.8.0",
    "eslint-config-next": "^12.0.10",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^29.0.1",
    "jest-mock-extended": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "prisma": "^3.4.2",
    "supertest": "^6.1.6",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.4.0",
    "typescript": "^4.8.2"
  }
}
